<Window x:Class="SportCenter.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:components="clr-namespace:SportCenter.Views.Components"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        mc:Ignorable="d"
        Title="Sport Center" Width="1360" Height="768"
        ResizeMode="CanResize">

    <Grid>
        <Border Background="{DynamicResource BackgroundBrush}"
                CornerRadius="{StaticResource WindowCornerRadius}"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="320" 
                                  ShadowDepth="10" Opacity="0.5" 
                                  BlurRadius="20"/>
            </Border.Effect>

            <Grid>
                <components:TitleBar Height="50" VerticalAlignment="Top"/>
                <components:ResizeArea />
            </Grid>
        </Border>
    </Grid>

</Window>