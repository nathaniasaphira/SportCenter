<Window x:Class="SportCenter.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:components="clr-namespace:SportCenter.Views.Components"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        mc:Ignorable="d"
        Title="{DynamicResource AppTitle}" 
        Width="1360" Height="768"
        ResizeMode="CanResize"
        Loaded="MainWindow_Loaded"
        SizeChanged="MainWindow_OnSizeChanged"
        SourceInitialized="MainWindow_OnSourceInitialized">
    <Grid>
        <Border x:Name="OuterBorder"
                Background="{DynamicResource BackgroundBrush}"
                CornerRadius="{StaticResource WindowCornerRadius}"
                Margin="{DynamicResource WindowMargin}">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="320"
                                  ShadowDepth="10" Opacity="0.5"
                                  BlurRadius="20" />
            </Border.Effect>

            <Grid>
                <components:TitleBar Height="50" VerticalAlignment="Top" />
                <components:ResizeArea />
            </Grid>
        </Border>
    </Grid>

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" 
                      CornerRadius="0" 
                      CaptionHeight="0" 
                      UseAeroCaptionButtons="False" 
                      ResizeBorderThickness="7" />
    </WindowChrome.WindowChrome>

    <Window.RenderTransform>
        <ScaleTransform x:Name="RenderScale" ScaleX="1" ScaleY="1" />
    </Window.RenderTransform>
</Window>