<UserControl x:Class="SportCenter.Views.Components.HomeButtonPrimary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="350">
        <Button Name="Button"
                Style="{StaticResource HomeButtonPrimary}"
                MinWidth="150" MinHeight="225"
                Margin="20"
                Width="300" Height="450">
            <TextBlock Name="ButtonText"
                       FontFamily="{DynamicResource ButtonPrimaryFontFamily}"
                       FontSize="{DynamicResource ButtonPrimaryFontSize}"
                       hc:TextBlockAttach.AutoTooltip="True">
                Hello, World!
            </TextBlock>
        </Button>
</UserControl>
