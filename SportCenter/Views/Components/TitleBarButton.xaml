<UserControl x:Class="SportCenter.Views.Components.TitleBarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">

    <Border Background="{Binding ButtonBackground, 
                RelativeSource={RelativeSource AncestorType=UserControl}}"
            CornerRadius="30"
            Margin="5">

        <Button Name="Button"
                BorderBrush="Transparent"
                Background="Transparent"
                Width="25" Height="25"
                Padding="7"
                Click="Button_OnClick">

            <Viewbox Stretch="UniformToFill">
                <Path Stroke="{DynamicResource ReverseTextBrush}"
                      StrokeThickness="2"
                      Data="{Binding ButtonGeometry, 
                             RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Viewbox>

        </Button>
        <!-- hc:IconElement.Geometry="{Binding ButtonGeometry, RelativeSource={RelativeSource AncestorType=UserControl}}" -->
    </Border>

</UserControl>
